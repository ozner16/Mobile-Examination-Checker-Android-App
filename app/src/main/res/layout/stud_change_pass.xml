<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".stud_change_pass">

    <TextView
        android:id="@+id/changePass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Change_password"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003" />

    <TextView
        android:id="@+id/new_pass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/New_password"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePass_txt"
        app:layout_constraintVertical_bias="0.088" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/prof_changePass_cont1"
        android:layout_width="340dp"
        android:layout_height="53dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:hintEnabled="false"
        app:layout_constraintTop_toBottomOf="@+id/new_pass_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.04">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/prof_changePass_txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="15"
            android:inputType="textPassword|textNoSuggestions"
            android:paddingTop="8dp"
            android:textColor="#F7221616"
            android:textCursorDrawable="@drawable/textbox_cursor"
            android:textSize="18sp" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/confirm_new_pass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Confirm_new_password"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_changePass_cont1"
        app:layout_constraintVertical_bias="0.087"
        app:layout_constraintHorizontal_bias="0.15"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/prof_changePass_cont2"
        android:layout_width="340dp"
        android:layout_height="53dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_new_pass_txt"
        app:layout_constraintVertical_bias="0.05">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/prof_changePass_txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="15"
            android:inputType="textPassword|textNoSuggestions"
            android:paddingTop="8dp"
            android:textColor="#F7221616"
            android:textCursorDrawable="@drawable/textbox_cursor"
            android:textSize="18sp" />


    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/bck_btn"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/Light_gray"
        android:text="@string/Back"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_changePass_cont2"
        app:layout_constraintVertical_bias="0.231" />

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="@string/Confirm"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/bck_btn"
        app:layout_constraintTop_toBottomOf="@+id/prof_changePass_cont2"
        app:layout_constraintVertical_bias="0.229" />




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>