<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".answer_key">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader_answer_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background_create_exam"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:foregroundGravity="center_horizontal">

        <TextView
            android:id="@+id/answer_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ANSWER KEY"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/cont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader_answer_key">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cont1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont3"
        app:layout_constraintTop_toBottomOf="@id/cont2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="3."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont4"
        app:layout_constraintTop_toBottomOf="@id/cont3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="4."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont5"
        app:layout_constraintTop_toBottomOf="@id/cont4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="5."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont6"
        app:layout_constraintTop_toBottomOf="@id/cont5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="6."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont7"
        app:layout_constraintTop_toBottomOf="@id/cont6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="7."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont8"
        app:layout_constraintTop_toBottomOf="@id/cont7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="8."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont9"
        app:layout_constraintTop_toBottomOf="@id/cont8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="9."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cont10"
        app:layout_constraintTop_toBottomOf="@id/cont9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:text="10."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/ans10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="@null"
            android:autofillHints=""
            android:layout_marginEnd="10dp"
            android:inputType="textVisiblePassword|textNoSuggestions" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btns_contain3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cont10">

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="RESET"
            android:backgroundTint="@color/Light_gray"
            android:stateListAnimator="@null"
            android:layout_marginEnd="22dp"
            style="Widget.AppCompat.Button.Borderless" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:text="SAVE"
            android:layout_marginStart="22dp"
            style="Widget.AppCompat.Button.Borderless"
            android:stateListAnimator="@null"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>